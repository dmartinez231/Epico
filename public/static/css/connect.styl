/*reseteos generales*/
*
	box-sizing border-box
	margin 0px auto
	padding 0px

ul, ol
	padding 0px
	margin 0px
li
	list-style none
a
	text-decoration none

body
	font 15px Arial, Helvetica, Sans-serif
	background-color white
	margin 0
	display flex
	flex-wrap wrap
	min-height 100vh

.content
	width 80%
	overflow hidden

/* Master */

header
	width 100%
	background-color rgb(222, 222, 222)
	padding 10px
	height 70px
	border-bottom 5px solid rgb(27, 62, 124)
	h1
		#logo
			float left
			letter-spacing 10px
			text-decoration none
			color white
			font-weight 900
		#logo:hover
			color black
	nav
		float right
		margin-top 10px
		li
			float left
			padding 0px 20px 0px 20px
			a
				color white
				text-decoration none
				text-transform uppercase
				font-size 16px
				font-weight bold
			a:hover
				color black
				text-decoration none
.errors
	width 500px
	padding 0px 16px
	.alert
		margin-bottom 0px

footer
	border-top 5px solid rgb(27, 62, 124)
	width 100%
	height 70px
	padding 20px 0px
	text-align center
	align-self flex-end
	background-color rgb(222, 222, 222)

/* Login */

.mtop16
	margin-top 16px
.mbottom16
	margin-bottom 16px

.box
	width 500px
	padding 0px 16px
	h3
		text-align center
	.btn-success
		background-color rgb(27, 62, 124)
		border 0px
		width 100%
	.footer
		text-align center
		display: flex
		justify-content: space-between;
		a
			display inline-block
			font-size .8em

/* Registro */

.box-radio
	.radio
		display inline-block
		width 50px
		margin-left 20px
